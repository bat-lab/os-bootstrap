{
  "name": "osbootstrap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --no-ci",
    "bootstrap:quick": "npm run bootstrap -- --scope=@os-bootstrap/*",
    "start:cli": "lerna run start --scope=@os-bootstrap/cli",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rimraf node_modules",
    "clean": "npm-run-all clean:*",
    "build": "lerna run build --stream --parallel",
    "lint:js": "prettier --check 'packages/**/*.{js, ts}'",
    "lint:yaml": "yamllint  packages/**/*.yaml",
    "lint": "npm-run-all lint:*",
    "lint-fix": "prettier --write 'packages/**/*.{js, ts}'",
    "pretest": "npm run lint",
    "test": "echo 'run test script in all packages' && lerna run test --concurrency=1 --stream",
    "publish-all": "lerna publish",
    "ci": "echo CI"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-dafab/os-bootstrap.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dev-dafab/os-bootstrap/issues"
  },
  "homepage": "https://github.com/dev-dafab/os-bootstrap#readme",
  "devDependencies": {
    "app-root-dir": "^1.0.2",
    "class-validator": "^0.12.2",
    "command-exists": "^1.2.9",
    "commander": "^5.1.0",
    "configstore": "^5.0.1",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-append-prepend": "^1.0.8",
    "gulp-concat": "^2.6.1",
    "gulp-yaml": "^2.0.4",
    "gulp-zip": "^5.0.1",
    "jest": "^26.0.1",
    "js-yaml": "^3.10.0",
    "jsdoc": "^3.5.5",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "yaml-lint": "^1.2.4",
    "yaml-schema-validator": "^1.2.2"
  }
}
